<%= render "maps/crumb-map" %>

<%=form_for([@trail, @crumb]) do |c| %>
    Name: <%= c.text_field(:name) %><br>
    Description: <%= c.text_area(:description) %><br>
    Locked? <%= c.check_box(:requires_answer) %><br>
    If locked, inlcude question in description and add answer below.
    <%= c.text_area(:question) %><br>
    <%= c.text_area(:answer) %><br>
    <%if @crumb.img_file_size%>
    <div id="view">
      <img src= <%=@crumb.img%>/>
    </div>
    <%end%>
    <%= c.file_field :img %>
    <%if @crumb.sound_file_size%>
    <div id="view">
    <audio controls>
      <source src=<%= @crumb.sound %>>
    </audio>
    </div>
    <%end%>
    <%=c.file_field :sound%>
    <%= c.hidden_field(:latitude, :value => @crumb.latitude) %>
    <%= c.hidden_field(:longitude, :value => @crumb.longitude) %>
    <%= c.submit "Edit Crumb" %>
  <%end%>

<div style="display: none;" id="trail-id"><%= @trail.id %></div>
