<div class="container">
	<div class="row text-container">
		<div class="col-sm-12">
    <%= render "maps/crumb-map" %>
    </div>
  </div>

<div class="row text-container">
  <div class="col-sm-6">
  <%=form_for([@trail, @crumb]) do |c| %>
    Name:<br> <%= c.text_field(:name) %><br>
    Description:<br> <%= c.text_field :description, id: "message_area"%><br>
    Locked? <%= c.check_box(:requires_answer) %><br>
    If locked, please fill out below below.<br>
    Question:<br><%= c.text_field :question, id: "message_area"%><br>
    Answer:<br><%=c.text_field :answer, id: "message_area"%><br>
  </div>

  <div class="col-sm-6">
    <%if @crumb.img_file_size%>
    <div id="view">
      <img src= <%=@crumb.img%>/>
    </div>
    <%end%>
    Image:<%= c.file_field :img %><br>
    <%if @crumb.sound_file_size%>
    <div id="view">
    <audio controls>
      <source src=<%= @crumb.sound %>><br>
    </audio>
    </div>
    <%end%>
    Sound:<%=c.file_field :sound%>
    <%= c.hidden_field(:latitude, :value => @trail.latitude) %>
    <%= c.hidden_field(:longitude, :value => @trail.longitude) %>
  </div>

    <div class="row text-container">
      <div class="col-sm-12">
    <br><br><br><br><%= c.submit "Edit Crumb" %><br><br><br><br>
    <%end%>
</div>
</div>


</div>

<div style="display: none;" id="trail-id"><%= @trail.id %></div>
</div>
