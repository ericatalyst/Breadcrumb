<%= render "maps/crumb-map" %>

<%=form_for([@trail, @crumb]) do |c| %>
    Name: <%= c.text_field(:name) %><br>
    Description: <%= c.text_area(:description) %><br>
    Locked? <%= c.check_box(:requires_answer) %><br>
    If locked, inlcude question in description and add answer below.
    <%= c.text_area(:answer) %><br>
    <%= c.label :img %>
    <%= c.file_field :img %>
    <%= c.hidden_field(:latitude, value: @trail.latitude) %>
    <%= c.hidden_field(:longitude, value: @trail.longitude) %>
   <%= c.submit "Add Crumb" %>
<% end %>
