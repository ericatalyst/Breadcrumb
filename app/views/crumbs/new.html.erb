<%if @trail.crumbs && (@trail.crumbs.length <= 5)%>
  <% form_for(@crumb) do |c| %>
    Name: <%= c.text_field(:name) %><br>
    Description: <%= c.text_area(:description) %><br>
    Locked? <%= c.check_box(:requires_answer) %><br>
    If locked, add question in description and add answer below.
    <%= c.text_area(:answer) %><br>
  <% end %>
    <% if @trail.ordered %>
      <%= c.text_area(:number) %><br>
    <% end %>
  <%= c.submit "Add Crumb" %>
<% end %>
