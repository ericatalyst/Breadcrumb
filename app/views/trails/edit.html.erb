
<h2><%=@trail.name%></h2>
<% if @trail.priv%>
[PRIVATE]<br>
<%else%>
[PUBLIC]<br>
<%end%>
<p><%=@trail.description%></p>
<% if @trail.sequential%>
<div>To be followed in sequence.</div>
<%end%>

<%if @trail.crumbs%>
  <%@trail.crumbs.each do |c|%>
    <%= c.name %><br>
    <%= c.description %><br>
    <%= link_to trail_crumbs_path, method: delete %>
  <% end %>
<% end %>

Select up to three (3) Tags:
 <%= select_tag(:tag1, options_for_select( @tags )) %>
 <%= select_tag(:tag2, options_for_select( @tags )) %>
 <%= select_tag(:tag3, options_for_select( @tags )) %>

 <br><div>Image upload here</div><br>

<br><td><%= link_to "New Crumb", new_trail_crumb_path(@trail) %></td>
