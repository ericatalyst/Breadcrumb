<div class="container">

  <div class="row text-container">
  <div class="col-sm-12">
  <%if @trail.img_file_size%>
  <div id="view">
    <img src= <%=@trail.img%>/>
  </div>
  <%end%>
  </div>
  </div>

	<div class="row text-container matching-color">
	<div class="col-sm-12">
    <h2><%=@trail.name%></h2>
    <%if @trail.priv%>
	   <span class="matching-color">[PRIVATE]</span>
    <%else%>
	    <span class="matching-color">[PUBLIC]</span>
    <%end%>
    <%if @trail.sequential%>
      <span>To be followed in sequence.</span>
    <%end%>
    </div>
    </div>

<div class="row text-container">
<div class="col-sm-12">
<p><%=@trail.description%></p><br>
  <%if @trail.tags.length > 0%>
  <br>Tagged:
    <%@trail.tags.each do |tag|%>
    <%=link_to tag.subject, tag%>
    <%end%>
  <br>
  <%end%>
  </div>
</div>

  <div class="row text-container">
  <div class="col-sm-6">
  <%=link_to 'Save for Later?', "/users/#{current_user.id}/add/#{@trail.id}"%>
  </div>
  <div class="col-sm-6">
  <%=link_to 'Start Now!', "/actives/#{@trail.id}/join"%>
  </div>
  </div>
</div>
